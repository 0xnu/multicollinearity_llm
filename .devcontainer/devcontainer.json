{
  "name": "C Development",
  "image": "mcr.microsoft.com/devcontainers/base:bullseye",
  "features": {
    "ghcr.io/devcontainers/features/gcc:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack"
      ]
    }
  },
  "forwardPorts": [8000],
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y build-essential",
  "remoteUser": "vscode"
}